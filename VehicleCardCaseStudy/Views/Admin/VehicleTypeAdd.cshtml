@model EntityLayer.Entities.VehiclesType

@{
    ViewBag.Title = "VehicleTypeAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-file-text-o"></i>Araç Tipi Ekle</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Admin/Index/">Anasayfa</a></li>
            <li><i class="icon_document_alt"></i><a href="/Admin/VehicleType/">Araç Tipi</a></li>
            <li><i class="fa fa-file-text-o"></i><a href="/Admin/VehicleTypeAdd/">Araç Tipi Ekle</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Araç Tipi
            </header>
            <div class="panel-body">
                <form class="form-horizontal " method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Marka</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Brand">
                            @Html.ValidationMessageFor(x => x.Brand, "", new { @style = "color:red" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Model</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Model">
                            @Html.ValidationMessageFor(x => x.Model, "", new { @style = "color:red" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Kapasite (KG)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="CapacityKg">
                            @Html.ValidationMessageFor(x => x.CapacityKg, "", new { @style = "color:red" })
                        </div>
                    </div>  <div class="form-group">
                        <label class="col-sm-2 control-label">Kapasite (M3)</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="CapacityM3" />
                            @Html.ValidationMessageFor(x => x.CapacityM3, "", new { @style = "color:red" })
                        </div>
                    </div>
                    <button class="btn btn-primary" type="submit">Ekle</button>
                </form>
            </div>
        </section>
    </div>
</div>


